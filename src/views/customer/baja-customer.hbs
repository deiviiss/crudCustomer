<div class="container p-3">

  <div class="row">
    <div class="col-md-6 mx-auto">

      <div class="card">

        <div class="card-header">
          <h5 class="card-title text-center">
            Datos del Cliente
          </h5>
        </div>

        <div class="card-body">

          {{! Agregar la propiedad que evita el autorelleno (autocomplete="off")}}

          <form action="/customer/baja-customer/{{customer.id}}" method="post">

            <div class="grid">
              {{! nombre }}
              <div class="form-group">
                <label for="cliente">Nombre del cliente</label>
                <p>{{customer.cliente}}</p>
              </div>

              {{! ultimo retiro }}
              <div class="form-group">
                <label for="fbaja">Fecha de baja</label>
                <input
                  type="date"
                  name="fbaja"
                  id="fbaja"
                  class="form-control"
                  required
                />
              </div>

              <div class="form-group">
                <button class="btn btn-success btn-block">Asignar fecha</button>
              </div>

            </div>

          </form>

        </div>

      </div>
    </div>
  </div>
</div>