<div class="container p-3">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title text-center">
            Apoyo por desempleo
          </h5>
        </div>

        <div class="card-body">
          <div class="grid">
            <div class="form-group">
              <h5 class="card-title m-1">Cantidad a retirar:</h5>

              <p class="form-control text-center">
                {{retiro.montoPesos}}
              </p>
            </div>

            <div class="form-group">
              <h5 class="card-title m-1">Honorarios:</h5>

              <p class="form-control text-center">
                {{retiro.cobroPesos}}
              </p>
            </div>

            <div class="form-group">
              <h5 class="card-title m-1">Aseguramiento:</h5>

              <p class="form-control text-center">
                {{retiro.aseguramientoPesos}}
              </p>
            </div>

            <div class="form-group">
              <h5 class="card-title m-1">Total:</h5>

              <p class="form-control text-center">
                {{retiro.cobroClientePesos}}
              </p>
            </div>

            <div class="form-group">
              <h5 class="card-title m-1">Cliente:</h5>

              <p class="form-control text-center">
                {{retiro.libreClientePesos}}
              </p>
            </div>

            <br />
            <a
              href="/api/v1/recurso/calculate/"
              class="btn btn-success btn-block"
              id="btnCalcular"
            >Nueva consulta</a>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>