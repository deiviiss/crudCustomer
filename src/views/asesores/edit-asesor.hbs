{{! formulario editar asesor }}

<div class="container p-3">
  <div class="row">
    <div class="col-md-4 mx-auto mt-3">
      <div class="card text-center">
        <div class="card-header">
          <h3>Editar Asesor</h3>
        </div>
        <div class="card-body">
          <form action="/edit-asesor/{{asesor.id_asesor}}" method="post">
            <div class="form-group">
              <label for="asesor">Nombre del Asesor</label>
              <input
                type="text"
                name="asesor"
                class="form-control"
                autofocus
                required
                autocomplete="off"
                value="{{asesor.asesor}}"
              />
            </div>

            <div class="container-buttons form-group">
              <button class="btn btn-success btn-block">Guardar</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>