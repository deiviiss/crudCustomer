<div class="container p-3">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title text-center">
            Cotizaci√≥n
          </h5>
        </div>

        <div class="card-body">
          <form action="/calculate/" method="POST" name="formulario-cotizar">

            <div class="grid">

              {{! porcentaje }}
              <div class="form-group">
                <select
                  name="porcentaje"
                  class="form-select form-control"
                  aria-label="Default select example"
                  id="porcentaje"
                >
                  <option selected>Porcentaje</option>

                  <option value="20">20%</option>
                  <option value="25">25%</option>

                </select>
                <div class="invalid-feedback">Selecciona una Afore</div>
              </div>

              <div class="form-group">
                <input
                  type="number"
                  name="cantidad"
                  class="form-control"
                  placeholder="Escribe la cantidad"
                  autofocus
                  required
                  autocomplete="off"
                />
              </div>

              <div class="form-group">
                <button
                  class="btn btn-success btn-block"
                  type="submit"
                >Calcular</button>
              </div>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>
</div>