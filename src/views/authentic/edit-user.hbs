{{! formulario edit user }}

<div class="container p-3">
  <div class="row">
    <div class="col-md-4 mx-auto mt-3">
      <div class="card text-center">
        <div class="card-header">
          <h3>Editar Usuario</h3>
        </div>
        <div class="card-body">
          <form action="/api/v1/authentic/edit-user/{{user.id}}" method="post">

            <div class="form-group">
              <label for="fullname">Nombre</label>
              <input
                type="text"
                name="fullname"
                class="form-control"
                autofocus
                value="{{user.fullname}}"
                autocomplete="off"
              />
            </div>

            <div class="form-group">
              <label for="username">Usuario</label>
              <input
                type="text"
                class="form-control"
                name="username"
                value="{{user.username}}"
                autocomplete="off"
              />
            </div>

            <div class="form-group">
              <button class="btn btn-success btn-block">Guardar</button>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>
</div>