{{! formulario register }}

<div class="container p-3">
  <div class="row">
    <div class="col-md-4 mx-auto mt-3">
      <div class="card text-center">
        <div class="card-header">
          <h3>Registrar Usuario</h3>
        </div>
        <div class="card-body">
          <form action="/api/v1/authentic/register-user" method="post">
            <div class="form-group">
              <input
                type="text"
                name="nombre"
                placeholder="Nombre"
                class="form-control"
                autofocus
                required
                autocomplete="off"
              />
            </div>

            <div class="form-group">
              <input
                type="text"
                class="form-control"
                name="apellido"
                placeholder="Apellido"
                required
                autocomplete="off"
              />
            </div>

            <div class="form-group">
              <input
                type="text"
                class="form-control"
                name="username"
                placeholder="Usuario"
                required
                autocomplete="off"
              />
            </div>
            <div class="form-group">
              <input
                type="password"
                class="form-control"
                name="password"
                placeholder="ContraseÃ±a"
                required
              />
            </div>
            <div class="form-group">
              <button class="btn btn-success btn-block">Registrar</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>