                  class="form-control"
                  name="password"
                  autofocus
                  required
                  placeholder="Nueva contraseña"
                  autocomplete="off"
                />
              </div>

              {{! <div class="form-group">
                <input
                  type="password"
                  class="form-control"
                  name="password2"
                  autofocus
